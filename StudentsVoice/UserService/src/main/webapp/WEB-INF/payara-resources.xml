<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//Payara.fish//DTD Payara Server 4 Resource Definitions//EN" "https://raw.githubusercontent.com/payara/Payara-Documentation/refs/heads/main-6/docs/modules/ROOT/pages/Appendix/Schemas/payara-resources_1_6.dtd">
<resources>
    <jdbc-connection-pool name="UserPool" datasource-classname="org.postgresql.ds.PGSimpleDataSource" res-type="javax.sql.DataSource">
        <property name="serverName" value="localhost"/>
        <property name="portNumber" value="5432"/>
        <property name="databaseName" value="postgres"/>
        <property name="user" value="admin"/>
        <property name="password" value="password"/>
    </jdbc-connection-pool>

    <jdbc-resource jndi-name="java:app/jdbc/UserResource" pool-name="UserPool"/>
</resources>
